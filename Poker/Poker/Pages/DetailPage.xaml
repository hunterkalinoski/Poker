<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poker.Pages.DetailPage"
             Title="Edit Entry">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="NameEntry" Placeholder="Name:"/>
            <Entry x:Name="ScoreEntry" Placeholder="Score:"/>
            <ActivityIndicator x:Name="activityIndicator" IsRunning="true" IsVisible="false"/>
            <Button x:Name="SaveButton" Text="Save" Clicked="SaveButton_Clicked"/>
            <Button x:Name="DeleteButton" Text="Delete" TextColor="Red" Clicked="DeleteButton_Clicked"/>
            <Button x:Name="CancelButton" Text="Cancel" Clicked="CancelButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>